    .token-preview {
        margin: 20px 0;
        padding: 10px;
        background: #f5f5f5;
        border-radius: 4px;
    }
    
    .links-section {
        margin-top: 20px;
    }
    
    .links-section p {
        margin: 10px 0;
    }
    
    #loginCard {
        margin-top: 20px;
    }
    
    #loginCard2 {
        box-shadow: none;
    }
    
    .helper-text {
        color: #757575;
        font-size: 0.8rem;
    }
</style>