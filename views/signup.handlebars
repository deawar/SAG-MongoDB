<body class="signUpBody">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card" id="registerCard">
                <div class="card-content">
                    <div class="container signup">
                        <h3 id="create-err-msg"></h3>

                        <h3 id="err-msg"></h3>

                        <div class="row">
                            <div class="col-md-6 col-md-offset-3">
                                <h2 id="registerHeader">Register</h2>
                                <div class="form-group" id="signUpFormFields">
                                    <div class="row">
                                        <form class="signup col s12 m12 l12">
                                            <div class="row">
                                                <div class="input-field col s6">
                                                    <input placeholder="First Name" id="firstname-input" type="text"
                                                        class="validate" required="" aria-required="true">
                                                    <label for="first_name">First Name</label>
                                                </div>
                                                <div class="input-field col s6">
                                                    <input id="lastname-input" type="text" class="validate" required=""
                                                        aria-required="true">
                                                    <label for="last_name">Last Name</label>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="input-field col s6">
                                                    <input id="address-input" type="text" class="validate" required=""
                                                        aria-required="true">
                                                    <label for="address">Address</label>
                                                </div>
                                                <div class="input-field col s6">
                                                    <input id="address2-input" type="text" class="validate">
                                                    <label for="address2">Address2</label>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="input-field col s6">
                                                    <input id="city-input" type="text" class="validate" required=""
                                                        aria-required="true">
                                                    <label for="city">City</label>
                                                </div>

                                                <div class="input-field col s6">
                                                    <input id="state-input" type="text" class="validate" required=""
                                                        aria-required="true">
                                                    <label for="state">State</label>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="input-field col s6">
                                                    <input id="zipcode-input" type="text" class="validate" required=""
                                                        aria-required="true">
                                                    <label for="zipCode">Zip Code</label>
                                                </div>

                                                <div class="input-field col s6">
                                                    <input id="phone-input" type="text" class="validate" required=""
                                                        aria-required="true">
                                                    <label for="phoneNumber">Mobile Tel Number</label>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="input-field col s6">
                                                    <input id="email-input" type="email" class="validate" required=""
                                                        aria-required="true">
                                                    <label for="email">Email</label>
                                                </div>

                                                <div class="input-field col s6">
                                                    <input id="school-input" type="text" class="validate" required=""
                                                        aria-required="true">
                                                    <label for="school">School</label>
                                                </div>

                                            <div class="row"></div>    
                                                <div class="input-field col s6">
                                                    <input id="password-input" type="password" class="validate"
                                                        required="" aria-required="true">
                                                    <label for="password">Password</label>
                                                </div>
                                                <div class="input-field col s6">
                                                    <input id="confirm-password-input" type="password" class="validate"
                                                        required="" aria-required="true">
                                                    <label for="password">Confirm Password</label>
                                                </div>
                                            </div>
                                            </div>
                                            <div class="row">
                                                <div class="input-field col s8 m8 l8"  id="userroles">
                                                    <p>
                                                    <label>
                                                        <input name="roles" type="radio" checked value="student" />
                                                        <span>Student</span>
                                                    </label>
                                                    </p>
                                                    <p>
                                                    <label>
                                                        <input name="roles" type="radio" value="bidder"/>
                                                        <span>Bidder</span>
                                                    </label>
                                                    </p>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-default red darken-4 hoverable"
                                                id="registerBtn">Sign Up</button>
                                        </form>
                                        <br /><br />
                                        <p><a href="/login" class= "hoverable">Or log in here</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h3 id="Footer-create-err-msg"></h3>

                        <h3 id="Footer-err-msg"></h3>
                    </div>
                </div>
            </div>
        </div>
    </div>


  <!-- Modal Structure -->
  <div id="PwMatch-modal" class="modal">
    <div class="modal-content">
      <h4>Password Mismatch</h4>
      <p></p><b>The Passwords entered DO NOT Match!</b></p>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
  </div>
  <div id="Form-modal" class="modal">
    <div class="modal-content">
      <h4>Incomplete Registration Form</h4>
      <p></p><b>Please fill out the form completely!</b></p>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
  </div>

</body>




